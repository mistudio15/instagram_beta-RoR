<div class="row alert alert-secondary">
  <div class="col-10">
    <h4><%= t '.title' %></h4>
  </div>

  <div class="col-2">
    <%= link_to t('.cansel'), user_post_path(@user, @post), class: "btn btn-outline-secondary" %>
  </div>

</div>

<div class="mt-3">
  <%= form_with model: [@user, @post] do |form| %>

  <div class="mb-3 row">
    <div class="col-2">
      <%= form.label :title %>
    </div>

    <div class="col-10">
      <%= form.text_field :title, required: true, class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-2">
      <%= form.label :body %>
    </div>

    <div class="col-10">
      <%= form.text_field :body, class: 'form-control' %>
    </div>
  </div>

  <%= form.submit t('users.form.submit'), class: 'btn btn-primary' %>
  <% end %>
</div>